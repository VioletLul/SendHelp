<UserControl
    x:Class="SendHelp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:SendHelp.Properties"
    Style="{StaticResource BaseUserControlStyle}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.MainPageTitle}" />
        <Grid Grid.Row="1" Background="CornflowerBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="397*" />
                <ColumnDefinition Width="403*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonProjectile" Height="5" Width="20" Visibility="Visible" IsEnabled="False" />
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,42">
                <Button BorderBrush="Black" Background="BlueViolet"  Width="80" Height="25" Command="{Binding ButtonCommand2}" />
                <Label Height="25" Width="80" Content="Spieler 1" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,42" Grid.Column="1">
                <Button Height="25" Width="80" Background="Crimson" BorderBrush="Black" Command="{Binding ButtonCommand}" RenderTransformOrigin="0.589,0.592" />
                <Label Height="25" Width="80" Content="Spieler 2"></Label>
            </StackPanel>
            <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button Background="Black" Content="Button" Height="175" Width="3" IsEnabled="False" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>